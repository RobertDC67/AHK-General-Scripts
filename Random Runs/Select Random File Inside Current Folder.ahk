SelectRandomItem(hwnd) {
   for window in ComObjCreate("Shell.Application").Windows
      try if (window.hwnd = hwnd) {
         sfv := window.Document
         Random, item, 1, sfv.Folder.Items.Count
         sfv.SelectItem(sfv.Folder.Items.Item(item-1), 1|4|8|16)
Send {Enter}
         Return
      }
