hk(f=0) {
  static allkeys, ExcludeKeys:="LButton,MButton,RButton,WheelUp,WheelDown"
  if !allkeys
  {
    s:="||NumpadEnter|Home|End|PgUp|PgDn|Left|Right|Up|Down|Del|Ins|"
    Loop, 254
      k:=GetKeyName(Format("VK{:02X}",A_Index))
        , s.=InStr(s, "|" k "|") ? "" : k "|"
    For k,v in {Control:"Ctrl",Escape:"Esc"}
      s:=StrReplace(s, k, v)
    allkeys:=Trim(s, "|")
  }
;;------------------
  f:=f ? "On":"Off"
  For k,v in StrSplit(allkeys,"|")
    if v not in %ExcludeKeys%
      Hotkey, *%v%, Block_Input, %f% UseErrorLevel
  Block_Input:
  Return
}
;;------------------
hk(0)  ; Enable all keyboard buttons
Return
;;------------------
^k::    ;; [Ctrl]+[k]
    Toggle := !Toggle
    SoundBeep, 1500 + 200 * Toggle
        if (Toggle = 1) {
hk(1)    ; Trigger On.
    } else {
hk(0)    ; Trigger Off.
    }
Return




