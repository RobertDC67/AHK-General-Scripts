#Persistent

OnExit("VolumeCapture")

;; ------ Specify the path for Vol.db
VolDbPath := "C:\Users\ \Documents\Sound Saver\Vol.db"

if FileExist(VolDbPath) {
    file := FileOpen(VolDbPath, "r")
    if !file.HasError() {
        VolumeSetting := file.Read()
        file.Close()
    }
}

if (VolumeSetting != "") {
    SoundSet, VolumeSetting
}
Return

VolumeCapture() {
    global VolDbPath
    SoundGet, VolumeSetting

    file := FileOpen(VolDbPath, "w")
    if !file.HasError() {
        file.Write(VolumeSetting)
        file.Close()
    }
}
Return




