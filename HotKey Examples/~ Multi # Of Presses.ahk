;⮞-----------------------🔥 HotKey 🔥 
^t::

if (Hotkey_Presses > 0) 	 ; ←← SetTimer already started, so we log the keypress instead.
{
    Hotkey_Presses += 1
    Return
}


;;------ Set count to 1 and start the timer.
Hotkey_Presses := 1
SetTimer, HotKey, -600 	 ; ←← Wait for more presses within a 600 millisecond window.
    Return


;;------ 
HotKey:
if (Hotkey_Presses = 1) 		 ; ←← Hotkey was pressed 1 time. 
{ 
    Send, {TEXT}
    SplashTextOn, 150, , Hotkey was pressed 1 time.
    Soundbeep, 1700, 150
        Sleep, 1500
    SplashTextOff
}
else if (Hotkey_Presses = 2) 		 ; ←← Hotkey was pressed 2 times. 
{
    SplashTextOn, 150, , Hotkey was pressed 2 times.
    Soundbeep, 1700, 150
    Soundbeep, 1700, 150
        Sleep, 1500
    SplashTextOff
}
else if (Hotkey_Presses = 3) 		 ; ←← Hotkey was pressed 3 times. 
{
    SplashTextOn, 150, , Hotkey was pressed 3 times.
   Soundbeep, 1700, 150
   Soundbeep, 1700, 150
   Soundbeep, 1700, 150
        Sleep, 1500
    SplashTextOff
}
else if (Hotkey_Presses > 3) 		 ; ←← Multiple key presses. 
{
    SplashTextOn, 200, , Hotkey was pressed too many times.
    Soundbeep, 900, 150
    Soundbeep, 800, 300
        Sleep, 1500
    SplashTextOff
}


;;------ Reset the count.
    Hotkey_Presses := 0
    Return






