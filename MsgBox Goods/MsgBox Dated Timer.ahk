DynamicTxt_MsgBox(CountDown:=100) {
Static hWin, msg_txt := "--------------------`n"
        .  "Warning, this is a multi-line message`n"
        .  "--------------------`n"
        .  "`n"

  SetTimer, Msg, 1000 ; 1 second interval
  MsgBox, 48,, % msg_txt DateTime_Format_HumanRead_from_sec(CountDown), % CountDown
  SetTimer, Msg,% "Off" hWin := ""
  SoundBeep
  Return

  Msg:
    hWin := (hWin) ? hwin : "ahk_id " WinExist(A_ScriptName " ahk_class #32770")
    ControlSetText, Static2, % msg_txt DateTime_Format_HumanRead_from_sec(--CountDown), % hWin
  return
}

DateTime_Format_HumanRead_from_sec(sec) {
  h := Floor(sec/3600)
  m := sec>3600 ? Floor(mod(sec,3600)/60) : Floor(sec/60)
  day := Floor(h/24)
  h1  := mod(h,24)
  s := Floor(mod(sec,60))
  return day . " day " . h . " hr " . m . " min " . s . " sec"
}
