^F1::

#Persistent
Process Priority,, B

maxW := 500
maxH := 600
top  := {}

SetTimer Top, 250

Top:
added := {}

WinGet win, List
Loop % win
 If visible(winTitle := "ahk_id" win%A_Index%) && WinExist(winTitle) && !onTop(win%A_Index%) {
  WinGetPos,,, w, h
  WinGet minMax, MinMax
  If !minMax && w <= maxW && h <= maxH {
   WinSet AlwaysOnTop, On
   WinSet Top
   top[win%A_Index%]   := True
   added[win%A_Index%] := True
  }
 }
For hWnd in top
 If WinExist("ahk_id" hWnd) {
  If !added.Has(hWnd) && onTop(hWnd) {
   WinGetPos,,, w, h
   If (w > maxW || h > maxH) {
    WinSet AlwaysOnTop, Off
    top.Delete(hWnd)
    SoundBeep 2500
   }
  }
 } Else top.Delete(hWnd)
Return

onTop(hWnd := "") {
 Static WS_EX_TOPMOST := 8
 WinGet exStyle, ExStyle, % hWnd ? "ahk_id" hWnd : "A"
 Return !!(exStyle & WS_EX_TOPMOST)
}
;----------
visible(winTitle) {
 WinGetTitle dwTitle   ,          % winTitle
 WinGet      dwStyle   , Style  , % winTitle
 WinGet      dwExStyle , ExStyle, % winTitle
 WinGetClass szClass   ,          % winTitle
 Return !(dwTitle = "" || dwStyle & 0x08000000 || !(dwStyle & 0x10000000)
       || dwExStyle & 0x00000080 || szClass = "TApplication")
}
Return




